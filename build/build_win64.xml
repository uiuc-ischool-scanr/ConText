	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="commons-beanutils-1.8.3.jar"/>
				<include name="commons-codec-1.3.jar"/>
				<include name="commons-collections-3.2.1.jar"/>
				<include name="commons-digester-2.0.jar"/>	
				<include name="commons-io-2.4.jar"/>
				<include name="commons-jexl-2.1.1.jar"/>
				<include name="commons-lang3-3.1.jar"/>
				<include name="commons-logging-1.1.1.jar"/>
				<include name="commons-logging-1.1.2.jar"/>				
				<include name="gephi-toolkit-0.9.1-all.jar"/>
				<include name="joda-time-2.9.4.jar"/>
				<include name="jollyday-0.4.9.jar"/>
				<include name="jsonic-1.2.7.jar"/>				
				<include name="jxls-core-1.0.6.jar"/>
				<include name="jxls-reader-1.0.6.jar"/>
				<include name="langdetect.jar"/>
				<include name="mallet-2.0.8RC3.jar"/>
				<include name="mallet-deps-2.0.8RC3.jar"/>
				<include name="monolog-fx-1.0.0.jar"/>
				<include name="opencsv-2.3.jar"/>
				<include name="poi-3.9-20121203.jar"/>
				<include name="poi-ooxml-3.9-20121203.jar"/>
				<include name="poi-ooxml-schemas-3.9-20121203.jar"/>
				<include name="secondstring.jar"/>
				<include name="stanford-corenlp-3.9.2.jar"/>
				<include name="stanford-parser.jar"/>
				<include name="trove-3.0.0a1.jar"/>
				<include name="xom.jar"/>
				
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/data/Images">
				<include name="**/*" />
			</fileset>
		</copy>
				
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*" />
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
				<filelist>
					<file name="C:\Program Files\Java\openjdk_zulu\zulu8.48.0.53-ca-fx-jdk8.0.265-win_x64\jre\lib\ext\jfxrt.jar"/>
				</filelist>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
			<fileset dir="project/data/Images">
				<exclude name="**/*.java"/>
			</fileset>
					
			<fileset dir="project/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
		

		<!--Customization-->

		<copy todir="dist">
					<fileset dir="..">
						<include name="LICENSE_GNU_GPLv2.txt"/>
						<include name="LICENSE_GNU_GPLv3.txt"/>
						<include name="README.txt"/>
					</fileset>
				</copy>

		
		<mkdir dir="dist/javadoc" />
		<copy todir="dist/javadoc">
			<fileset dir="../javadoc">
				<include name="*" />
			</fileset>
		</copy>
		<mkdir dir="dist/data" />
		<copy todir="dist/data">
			<fileset dir="../data">
				<include name="**/*" />
			</fileset>
		</copy>


		<mkdir dir="dist/output" />
		
        <delete dir="package"/>
		<mkdir dir="package" />
		
		<!-- Icons only for Windows -->
				<mkdir dir="package/windows" />
				<copy todir="package/windows">
					<fileset dir="../logo">
						<include name="ConText.ico" />
						<include name="ConText.bmp" />
						
					</fileset>
					<fileset dir="../logo/istl64">
						<include name="ConText.iss"/>
					</fileset>
				</copy>

		
		
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="ConText.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
			<fx:fileset dir="dist" includes="data/**" />
			<fx:fileset dir="dist" includes="javadoc/**" />
			<fx:fileset dir="dist" includes="output/**" />
			<fx:fileset dir="dist" includes="LICENSE_GNU_GPLv2.txt"/>
			<fx:fileset dir="dist" includes="LICENSE_GNU_GPLv3.txt"/>
			<fx:fileset dir="dist" includes="README.txt"/>
		</fx:resources>
	
		<!-- end of customization -->
		
		<fx:application id="fxApplication"
			name="ConText"
			mainClass="context.app.main.ContextFX"
			toolkit="fx"
			version="2.0"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/ConText.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="University of Illinois"/>
				<attribute name="Implementation-Title" value="ConText"/>
				<attribute name="Implementation-Version" value="2.0-x64"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="ConText" nativeBundles="exe"
			updatemode="background"
			verbose="true">
	
			<fx:info title="ConText" vendor="University of Illinois"/>
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
			<fx:preferences menu="true" shortcut="true"/>
			
			<!-- Customized JVM setup for application -->
			<fx:platform>
			   <fx:jvmarg value="-Xmx4096m"/>
			</fx:platform>
			<!-- End of Customized JVM setup for application -->
			
		</fx:deploy>
		
		<!-- move installers to installer folder -->
		<delete dir="../installer/windows64" />
		<mkdir dir="../installer/windows64" />
		<copy todir="../installer/windows64">
				<fileset dir="deploy/bundles">
					<include name="ConText-2.0-x64.exe" />
				</fileset>
			</copy> 	
	
	
	</target>
</project>
